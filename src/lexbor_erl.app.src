{application, lexbor_erl,
 [{description, "Erlang wrapper for Lexbor HTML via a port"},
  {vsn, "0.0.1"},
  {registered, [lexbor_erl_pool, lexbor_erl_sup]},
  {mod, {lexbor_erl_app, []}},
  {applications, [kernel, stdlib]},
  {env, [
      {pool_size, 4},        % Number of parallel worker processes (default: 4)
      {op_timeout_ms, 3000}  % Timeout for port operations in milliseconds
  ]}
 ]}.
